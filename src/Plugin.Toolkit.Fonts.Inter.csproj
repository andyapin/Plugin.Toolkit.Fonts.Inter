<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net8.0-android;net8.0-ios;net8.0-maccatalyst;net9.0;net9.0-android;net9.0-ios;net9.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net8.0-windows10.0.19041.0;net9.0-windows10.0.19041.0</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net8.0-tizen</TargetFrameworks> -->
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<NoWarn>CS1591</NoWarn>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">11.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">13.1</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>

		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageProjectUrl>https://github.com/andyapin/Plugin.Toolkit.Fonts.Inter</PackageProjectUrl>
		<RepositoryUrl>https://github.com/andyapin/Plugin.Toolkit.Fonts.Inter</RepositoryUrl>
		<PackageTags>plugin;toolkit;maui;font;android;ios;desktop;windows;mac</PackageTags>
		<Description>Integrate Inter font family into .NET MAUI</Description>
		<Copyright>© andyapin - www.handityo.my.id</Copyright>
		<Authors>Ibnu Hajar Handityo</Authors>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>
		<Version>1.0.1</Version>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<DebugSymbols>false</DebugSymbols>
		<DebugType>None</DebugType>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="Plugin.Toolkit.Fonts.Inter.targets" Pack="True" PackagePath="buildTransitive\" />
	</ItemGroup>

	<ItemGroup>
		<MauiFont Include="Resources\Fonts\*" />
		<None Include="Resources\Fonts\Inter-Bold.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-BoldItalic.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-Italic.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-Medium.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-MediumItalic.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-Regular.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-SemiBold.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
		<None Include="Resources\Fonts\Inter-SemiBoldItalic.ttf" Pack="True" PackagePath="buildTransitive\Fonts\" />
	</ItemGroup>
	
	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="\" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="$(MauiVersion)" />
	</ItemGroup>

</Project>
